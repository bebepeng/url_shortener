<html>
<head>
  <title>URL Shortener</title>
  <link href="<%= url('css/stylesheet.css') %>" rel="stylesheet" type="text/css"/>
</head>
<body>
<div class="url_shorten_container">
  <form action="/" method="post">
    <p class="error_message"><%= session[:message] %></p>
    <% session.delete(:message) %>
    <input type="text" placeholder="Enter URL to shorten" value="<%= session[:url] %>" name="url">
    <% session.delete(:url) %>
    <input type="text" placeholder="Optional: Enter a Vanity URL" value="<%= session[:vanity] %>" name="vanity">
    <% session.delete(:vanity) %>
    <input type="submit" value="Shorten">
  </form>
</div>
</body>
</html>